# Usar una imagen base oficial con PHP y Composer
FROM php:8.1-fpm

# Instalar dependencias del sistema
RUN apt-get update && apt-get install -y \
    git \
    curl \
    zip \
    unzip \
    libpq-dev \
    libonig-dev \
    libxml2-dev \
    libzip-dev \
    nodejs \
    npm \
    && docker-php-ext-install pdo_mysql mbstring bcmath opcache zip

# Instalar Composer
COPY --from=composer:2.6 /usr/bin/composer /usr/bin/composer

# Configurar directorio de trabajo
WORKDIR /var/www

# Copiar archivos de la aplicación
COPY . .

# Instalar dependencias de PHP con Composer
RUN composer install --no-dev --optimize-autoloader || { echo "Composer install failed"; exit 1; }

# Instalar dependencias de Node.js
RUN npm install || { echo "NPM install failed"; exit 1; }

# Compilar assets
RUN npm run build || { echo "NPM build failed"; exit 1; }

# Permisos para las carpetas necesarias
RUN chmod -R 777 storage/ bootstrap/cache || { echo "Failed to set permissions"; exit 1; }

# Crear enlaces simbólicos
RUN php artisan storage:link || { echo "Artisan storage:link failed"; exit 1; }

# Ejecutar migraciones forzadamente (ten cuidado con esto en producción)
RUN php artisan migrate --force || { echo "Artisan migrate failed"; exit 1; }

# Ejecutar optimizaciones de Laravel
RUN php artisan optimize || { echo "Artisan optimize failed"; exit 1; }

# Cambiar permisos finales
RUN chown -R www-data:www-data /var/www
RUN chmod -R 777 storage/ bootstrap/cache

# Exponer el puerto 9000 (usado por PHP-FPM)
EXPOSE 9000

# Comando para iniciar PHP-FPM
CMD ["php-fpm"]
